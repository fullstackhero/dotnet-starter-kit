<PageHeader Title="@_localizer["Brands"]" Header="@_localizer["Brands"]" SubHeader="@_localizer["Manage your Brands."]" />

<EntityTable @ref="_table" TEntity="BrandResponse" TId="Guid" TRequest="BrandViewModel" Context="@Context">

    <AdvancedSearchContent>
        <!-- Add any advanced search content here if needed -->
    </AdvancedSearchContent>

    <EditFormContent>
        @if (!Context.AddEditModal.IsCreate)
        {
            <MudItem xs="12" md="6">
                <MudTextField Label="@_localizer["Id"]" Value="context.Id" Underline=false ReadOnly />
            </MudItem>
        }
        <MudItem xs="12" md="6">
            <MudTextField Label="@_localizer["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="@_localizer["Description"]" For="@(() => context.Description)" @bind-Value="context.Description" />
        </MudItem>
